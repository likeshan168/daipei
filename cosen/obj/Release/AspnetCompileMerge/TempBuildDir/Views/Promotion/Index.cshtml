@model IEnumerable<cosen.promotions>

<link rel="stylesheet" href="http://cdn.staticfile.org/twitter-bootstrap/3.1.1/css/bootstrap.min.css">
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h3>欢迎来到作业指导管理系统!</h3>
            </hgroup>
        </div>
    </section>
    <section class="content-wrapper main-content clear-fix">
        <p>
            @Html.ActionLink("添加", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    促销短语
                </th>
                <th>
                    备注
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.p_content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.remark)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { id = item.p_id }) |
                       @* @Html.ActionLink("详情", "Details", new { id = item.p_id }) |*@
                        @Html.ActionLink("删除", "Delete", new { id = item.p_id })
                    </td>
                </tr>
            }

        </table>
    </section>

</div>