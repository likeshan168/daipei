@{
    Layout = null;

}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>进行搭配</title>
</head>
<body>


    <div id="body">
        <link rel="stylesheet" href="http://cdn.staticfile.org/twitter-bootstrap/3.1.1/css/bootstrap.min.css">
        <link href="~/static/mystyle/jquery.autocomplete.css" rel="stylesheet" />


        <div class="container">
            <div id="msg" class="alert alert-info alert-dismissable text-center" style="display:none;">
            </div>
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <form class="form-inline" role="form" id="frmdp" method="post" action="/api/dpapi/SaveDp">
                        <table class="table table-striped table-hover table-condensed table-bordered">
                            <tbody>
                                <tr class='text-center'>
                                    <td colspan='2'>
                                        <select name="stdp" id="stdp">
                                            <option value="1" selected="selected" class="form-control input-sm">搭配一</option>
                                            <option value="2">搭配二</option>
                                            <option value="3">搭配三</option>
                                            <option value="4">搭配四</option>
                                            <option value="5">搭配五</option>
                                            <option value="6">搭配六</option>
                                            <option value="7">搭配七</option>
                                            <option value="8">搭配八</option>
                                            <option value="9">搭配九</option>
                                            <option value="10">搭配十</option>
                                            <option value="11">搭配十一</option>
                                            <option value="12">搭配十二</option>
                                            <option value="13">搭配十三</option>
                                            <option value="14">搭配十四</option>
                                            <option value="15">搭配十五</option>
                                            <option value="16">搭配十六</option>
                                            <option value="17">搭配十七</option>
                                            <option value="18">搭配十八</option>
                                            <option value="19">搭配十九</option>
                                            <option value="20">搭配二十</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <table class="table table-striped table-hover table-condensed table-bordered">
                                            <tr>
                                                <td>组图</td>
                                            </tr>
                                            <tr>
                                                <td><input type="text" class="form-control" name="txtCompose" id="txtCompose" /></td>
                                            </tr>

                                            <tr>
                                                <td><img id='composeImg' src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>

                                        </table>
                                    </td>
                                    <td>
                                        <table class="table table-striped table-hover table-condensed table-bordered">
                                            <tr>
                                                <td>主打款</td>
                                                <td><input id="txtMaster" class="form-control" type="text" name="txtMaster" /></td>
                                                <td><img id="masterImg" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td>内搭</td>
                                                <td><input name="txtLegging1" class="form-control" type="text" id="txtLegging1" /></td>
                                                <td><img id="leggingImg1" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td><input name="txtLegging2" class="form-control" type="text" id="txtLegging2" /></td>
                                                <td><img id="leggingImg2" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td>下身</td>
                                                <td><input name="txtBottom1" class="form-control" type="text" id="txtBottom1" /></td>
                                                <td><img id="bottomImg1" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td><input name="txtBottom2" class="form-control" type="text" id="txtBottom2" /></td>
                                                <td><img id="bottomImg2" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td>配饰</td>
                                                <td><input name="txtAccessory1" class="form-control" type="text" id="txtAccessory1" /></td>
                                                <td><img id="accessoryImg1" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td><input name="txtAccessory2" class="form-control" type="text" id="txtAccessory2" /></td>
                                                <td><img id="accessoryImg2" width="60" height="60" src="/static/images/myimg/noimg.jpg" /></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr class="text-center">
                                    <td colspan='2'>
                                        <input type="submit" onclick="" name="btnSubmit" value="保存搭配" class="btn btn-success btn-sm" />
                                        @*<a href="/DaPei/UploadImg" class="btn btn-primary btn-sm active" role="button">图片上传</a>
                            <a href="/DaPei/SuggestPairs" class="btn btn-info btn-sm active" role="button">推荐搭配</a>*@
                                        <a href="/Home/Index" class="btn btn-info btn-sm active" role="button">返回首页</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>

        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/dp")

    </div>

</body>
</html>